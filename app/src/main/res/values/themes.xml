<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ecommerce" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_secondary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/login_edit_text_underline_color</item>
    </style>

    <style name="table_row_item" parent="@android:style/TextAppearance.Small">
    <item name="android:gravity">center_vertical</item>
    <item name="android:textSize">10sp</item>
    <item name="android:background">@color/white</item>
    <item name="android:layout_marginRight">1dp</item>
    <item name="android:layout_marginEnd">1dp</item>
    <item name="android:paddingStart">1dp</item>
    <item name="android:paddingLeft">1dp</item>
    <item name="android:layout_height">1dp</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">@dimen/size_100dp</item>
        <item name="android:layout_height">1dp</item>
        <!--        <item name="android:background">#2A314E</item>-->
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/gothammedium</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SortingDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="TabItemTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>