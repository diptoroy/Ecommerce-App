<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/homePageFragment"
        android:name="com.ddev.myapplication.view.fragment.ui.HomePageFragment"
        android:label="HomePageFragment" >
        <action
            android:id="@+id/action_homePageFragment_to_productDetailsFragment2"
            app:destination="@id/productDetailsFragment2"/>
        <action
            android:id="@+id/action_homePageFragment_to_addressAndPaymentFragment"
            app:destination="@id/addressAndPaymentFragment" />
<!--        <action-->
<!--            android:id="@+id/action_homePageFragment_to_orderFragment"-->
<!--            app:destination="@id/orderFragment" />-->
        <action
            android:id="@+id/action_homePageFragment_to_productCategoryFragment"
            app:destination="@id/productCategoryFragment" />
        <action
            android:id="@+id/action_homePageFragment_to_productSearchFragment"
            app:destination="@id/productSearchFragment" />
        <action
            android:id="@+id/action_homePageFragment_to_orderUiFragment"
            app:destination="@id/orderUiFragment" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.ddev.myapplication.view.fragment.ui.OnBoardingFragment"
        android:label="OnBoardingFragment" />
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.ddev.myapplication.view.fragment.createAccount.SignInFragment"
        android:label="SignInFragment" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_signInFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_signInFragment_to_homePageFragment"
            app:destination="@id/homePageFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.ddev.myapplication.view.fragment.createAccount.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.ddev.myapplication.view.fragment.createAccount.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" >
        <action
            android:id="@+id/action_forgotPasswordFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment2"
        android:name="com.ddev.myapplication.view.fragment.ui.ProductDetailsFragment"
        android:label="ProductDetailsFragment" >

        <argument android:name="productDetails"
            app:argType="com.ddev.myapplication.model.product.ProductModel"/>
    </fragment>
    <fragment
        android:id="@+id/addressAndPaymentFragment"
        android:name="com.ddev.myapplication.view.fragment.ui.AddressAndPaymentFragment"
        android:label="AddressAndPaymentFragment">

        <argument android:name="addToCart"
            app:argType="com.ddev.myapplication.model.AddToCartModel[]"/>
        <argument
            android:name="totalAmount"
            app:argType="integer" />
        <argument android:name="addressDetails"
            app:argType="com.ddev.myapplication.model.AddressModel"/>
        <action
            android:id="@+id/action_addressAndPaymentFragment_to_addressSelectFragment"
            app:destination="@id/addressSelectFragment" />
        <action
            android:id="@+id/action_addressAndPaymentFragment_to_checkOutFragment"
            app:destination="@id/checkOutFragment" />

    </fragment>
    <fragment
        android:id="@+id/addressSelectFragment"
        android:name="com.ddev.myapplication.view.fragment.ui.AddressSelectFragment"
        android:label="AddressSelectFragment" >
        <argument android:name="addToCart"
            app:argType="com.ddev.myapplication.model.AddToCartModel[]"/>
        <argument
            android:name="totalAmount"
            app:argType="integer" />
        <action
            android:id="@+id/action_addressSelectFragment_to_addressDetailsFragment"
            app:destination="@id/addressDetailsFragment" />
        <argument android:name="addressDetails"
            app:argType="com.ddev.myapplication.model.AddressModel"/>
        <action
            android:id="@+id/action_addressSelectFragment_to_addressAndPaymentFragment"
            app:destination="@id/addressAndPaymentFragment"
            app:popUpTo="@id/addressAndPaymentFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/addressDetailsFragment"
        android:name="com.ddev.myapplication.view.fragment.ui.AddressDetailsFragment"
        android:label="AddressDetailsFragment" >
        <argument android:name="addToCart"
            app:argType="com.ddev.myapplication.model.AddToCartModel[]"/>
        <argument
            android:name="totalAmount"
            app:argType="integer" />
        <action
            android:id="@+id/action_addressDetailsFragment_to_addressSelectFragment"
            app:destination="@id/addressSelectFragment"
            app:popUpTo="@id/addressSelectFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.ddev.myapplication.view.fragment.ui.orderUi.OrderFragment"
        android:label="OrderFragment" >
        <action
            android:id="@+id/action_orderFragment_to_orderDetailsFragment"
            app:destination="@id/orderDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/checkOutFragment"
        android:name="com.ddev.myapplication.view.fragment.ui.CheckOutFragment"
        android:label="CheckOutFragment" >
        <action
            android:id="@+id/action_checkOutFragment_to_homePageFragment"
            app:destination="@id/homePageFragment"
            app:popUpTo="@id/homePageFragment"/>
    </fragment>
    <fragment
        android:id="@+id/orderDetailsFragment"
        android:name="com.ddev.myapplication.view.fragment.ui.orderUi.OrderDetailsFragment"
        android:label="OrderDetailsFragment" >

        <argument
            android:name="orderDetails"
            app:argType="com.ddev.myapplication.model.OrderModel"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/productCategoryFragment"
        android:name="com.ddev.myapplication.view.fragment.ui.ProductCategoryFragment"
        android:label="ProductCategoryFragment" >
        <argument
            android:name="categoryModel"
            app:argType="com.ddev.myapplication.model.CategoryModel"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_productCategoryFragment_to_productDetailsFragment2"
            app:destination="@id/productDetailsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/productSearchFragment"
        android:name="com.ddev.myapplication.view.fragment.ui.ProductSearchFragment"
        android:label="ProductSearchFragment" >
        <action
            android:id="@+id/action_productSearchFragment_to_productDetailsFragment2"
            app:destination="@id/productDetailsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/orderUiFragment"
        android:name="com.ddev.myapplication.view.fragment.ui.orderUi.OrderUiFragment"
        android:label="OrderUiFragment" />
</navigation>