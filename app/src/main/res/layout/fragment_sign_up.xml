<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.createAccount.SignUpFragment">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/loginback"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/login_editext_border_margin"
            android:layout_marginTop="@dimen/login_editext_border_margin_top"
            android:fontFamily="@font/gothambold"
            android:text="@string/signupText"
            android:textColor="@color/black"
            android:textSize="@dimen/loginTextSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatImageView" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/signUpNameText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/login_editext_border_margin"
                    android:layout_marginTop="@dimen/login_editext_border_margin"
                    android:layout_marginEnd="@dimen/login_editext_border_margin"
                    android:background="@drawable/login_edit_text_background"
                    android:drawableStart="@drawable/ic_baseline_person_24"
                    android:drawablePadding="@dimen/login_editext_drawable_padding"
                    android:fontFamily="@font/gothambook"
                    android:hint="@string/signUpNameText"
                    android:padding="@dimen/login_editext_border_padding"
                    android:inputType="text"
                    android:textColor="@color/login_edit_text_color"
                    android:textSize="@dimen/login_editext_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/layoutContainer"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/signUpEmailText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/login_editext_border_margin"
                    android:layout_marginTop="@dimen/login_editext_border_margin_top"
                    android:layout_marginEnd="@dimen/login_editext_border_margin"
                    android:background="@drawable/login_edit_text_background"
                    android:drawableStart="@drawable/ic_baseline_alternate_email_24"
                    android:drawablePadding="@dimen/login_editext_drawable_padding"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/gothambook"
                    android:hint="@string/signInEmailHint"
                    android:padding="@dimen/login_editext_border_padding"
                    android:textColor="@color/login_edit_text_color"
                    android:textSize="@dimen/login_editext_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/layoutContainer"
                    app:layout_constraintTop_toBottomOf="@+id/signUpNameText" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/signUpPhoneText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/login_editext_border_margin"
                    android:layout_marginTop="@dimen/login_editext_border_margin_top"
                    android:layout_marginEnd="@dimen/login_editext_border_margin"
                    android:background="@drawable/login_edit_text_background"
                    android:drawableStart="@drawable/ic_baseline_phone_24"
                    android:drawablePadding="@dimen/login_editext_drawable_padding"
                    android:inputType="phone"
                    android:fontFamily="@font/gothambook"
                    android:hint="@string/signUpPhoneText"
                    android:padding="@dimen/login_editext_border_padding"
                    android:textColor="@color/login_edit_text_color"
                    android:textSize="@dimen/login_editext_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/layoutContainer"
                    app:layout_constraintTop_toBottomOf="@+id/signUpEmailText" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/signUpPasswordText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/login_editext_border_margin_top"
                    android:layout_marginEnd="@dimen/login_editext_border_margin"
                    android:background="@drawable/login_edit_text_background"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:drawablePadding="@dimen/login_editext_drawable_padding"
                    android:fontFamily="@font/gothambook"
                    android:hint="@string/signInPasswordHint"
                    android:padding="@dimen/login_editext_border_padding"
                    android:inputType="textPassword"
                    android:textColor="@color/login_edit_text_color"
                    android:textSize="@dimen/login_editext_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/signUpEmailText"
                    app:layout_constraintTop_toBottomOf="@+id/signUpPhoneText" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signUpBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/login_editext_margin_top"
                    android:background="@drawable/login_btn_background"
                    android:fontFamily="@font/gothammedium"
                    android:text="@string/signupText"
                    android:textColor="@color/white"
                    android:textSize="@dimen/login_editext_size"
                    app:layout_constraintEnd_toEndOf="@+id/signUpPasswordText"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/signUpPasswordText"
                    app:layout_constraintTop_toBottomOf="@+id/signUpPasswordText" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/signInBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/backLogin"
                    android:textSize="@dimen/login_editext_size"
                    android:textColor="@color/login_edit_text_color"
                    android:fontFamily="@font/gothammedium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signUpBtn" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>